<div id="header">
  <%= render :partial => "layouts/header_top" %>
  <div id="global-nav">
    <ul id="primary-nav">
      <li id="nav-dashboard"><%= link_to "My Dashboard", dashboard_url, :class => "menu-header" %></li>
      <li id="nav-accounts"><%= link_to "My Accounts", accounts_url, :class => "menu-header" %>
        <ul>
          <div class="menu-content">
            <li class="menu-head">To see your bank accounts</li>
            <li><%= link_to "Sign in", login_url %></li>
            <li class="menu-head">Or create a new account</li>
            <li><%= link_to "Sign up", signup_url %></li>
          </div>
        </ul>
      </li>
      <li id="nav-trends"><%= link_to "My Trends", trends_path, :class => "menu-header" %>
        <ul>
          <div class="menu-content">
            <li class="menu-head">Trends</li>
            <li><%= link_to "Spending Trends", trend_path("spending"), :class => 'history-link' %></li>
            <li><%= link_to "Earnings Trends", trend_path("earnings"), :class => 'history-link' %></li>
          </div>
        </ul>
      </li>
    </ul><!-- end #primary-nav -->
    <ul id="secondary-nav">
      <li id="nav-profile"><%= link_to 'Profile Settings', edit_profile_url, :class => "menu-header" %>
        <ul>
          <div class="menu-content">
            <div class="menu-column">
              <li class="menu-head">My Profile</li>
              <li><%= user_profile_link current_user, :include_photo => false, :link_text => 'View My Profile' %></li>
              <li><%= link_to 'Profile Settings', edit_profile_url %></li>
              <li><%= link_to 'Change My Password', password_user_url %></li>
              <li><%= link_to 'Download My Data', download_data_user_url %></li>
              <li><%= link_to 'Delete My Membership', delete_membership_user_url %></li>
            </div>
            <div class="clear"></div>
          </div>
        </ul>
      </li>
      <li id="nav-search" style="display:none">
        <form id="searchform" action="/accounts/search" method="get">
         <fieldset>
          <label for="query">Search Accounts</label>
          <input type="text" name="query" id="query" value="" />
          <input type="submit" name="submitquery" id="submitquery" value="Go" />
         </fieldset>
        </form>
      </li>
    </ul><!-- end of #secondary-nav-->
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>
