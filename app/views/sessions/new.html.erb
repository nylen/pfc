<% set_page_title "Sign In" %>

<%- content_for :header_action_button do -%>
  <%= link_to "Sign Up for Free!", signup_url, :class => "sign-up" %>
<%- end -%>
<% content_for :header do %>
  <%= javascript_include_tag 'wesabe/views/widgets/FadingLabelField', 'wesabe/views/pages/login' %>
<% end %>

<div class="module-header">
  <h4>Sign In</h4>
</div>
<div class="notification error" id="login-error" <% unless flash[:error] -%>style="display:none"<% end -%>>
  <div class="top"><div class="right">
    <p class="title"><%= flash[:error][:title] if flash[:error] %></p>
    <p class="message small"><%= flash[:error][:message] if flash[:error] %></p>
  </div></div>
  <div class="bottom"><div class="right"></div></div>
</div>
<%= form_tag login_url do %>
  <fieldset>
  <div class="two-col-centered fading-label signin">
    <div class="field">
      <label for="email" class="field-title">Email<span>old usernames still work</span></label>
      <%= text_field_tag :email, params[:email], :class => 'initial-focus' %>
    </div>
    <div class="field">
      <label for="password" class="field-title">Password</label>
      <input type="password" id="password" name="password" />
      <%= hidden_field_tag('intended_uri', @intended_uri) if @intended_uri -%>
      <input id="tz_offset" name="tz_offset" type="hidden" />
      <p class="field-subtext"><span id="forgot-password-link">Forgot your password? Too bad!</span></p>
    </div>
    <a class="button green submit"><span>Sign In</span></a><p class="login-message">Not a member yet? <a href="/signup">Sign Up!</a></p>
  </div>
  </fieldset>
<% end %>
